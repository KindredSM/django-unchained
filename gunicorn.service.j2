[Unit]
Description=gunicorn daemon
After=network.target

[Service]
User={{ app_user }}
Group={{ app_user }}
WorkingDirectory={{ app_dir }}
ExecStart={{ venv_dir }}/bin/gunicorn --access-logfile - --workers 3 --bind unix:/run/gunicorn.sock {{ app_name }}.wsgi:application

[Install]
WantedBy=multi-user.target